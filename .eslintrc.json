{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "next/core-web-vitals", // Enforces Next.js best practices and performance optimizations
    "prettier"             // Ensures Prettier rules are not conflicting with ESLint rules
  ],
  "parserOptions": {
    "ecmaVersion": 2021,    // For ES2021 features
    "sourceType": "module"  // Allows the use of ES6 modules
  },
  "rules": {
    "react/jsx-key": "warn",      // Example: Warns if keys are missing in JSX lists
    "no-console": "warn",         // Example: Warns about `console.log` statements
    "react/prop-types": "off"     // If using TypeScript, prop-types are redundant
  },
  "settings": {
    "react": {
      "version": "detect"         // Automatically detects the React version
    }
  }
}